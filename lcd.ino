//================================================
//  Initialization
//================================================

  void lcd_Init() {
    lcd.init();
  }

//================================================
//  Clear
//================================================

  void lcd_Clear() {
    lcd.clear();
  }

//================================================
//  LCD Light
//================================================

  void lcd_Light() {
    lcd.backlight();
  }

//================================================
//  LCD Dark
//================================================

  void lcd_Dark() {
    lcd.noBacklight();
  }

//================================================
//  LCD Print
//================================================

  void lcd_Print(String line1, String line2) {
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print(line1);
    lcd.setCursor(0, 1);
    lcd.print(line2);
  }

//================================================
//  LCD Blink
//================================================

  void lcd_Blink(uint8_t BlinkTimes, unsigned int BlinkDelay) {
    for(int i=0; i<BlinkTimes; i++) {
      lcd.noBacklight();
      delay(BlinkDelay/2);
      lcd.backlight();
      delay(BlinkDelay/2);
    }
  }

